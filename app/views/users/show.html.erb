<div class="container px-5 px-sm-0">
  <div class="row">
    <!--サイドバー-->
    <%= render 'books/sidebar', book: @book, user: @user %>
    <!--ユーザーのshowページ（ユーザの今まで投稿したbooks一覧が表示される）-->
    <div class="col-md-8 offset-md-1">
      <h2>books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th claspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |f| %>
           <tr>
             <td>
               <%= link_to user_path(f.user_id) do %>
                 <%= attachment_image_tag f.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "50x50" %>
               <% end %>
             </td>
             <td>
               <%= link_to f.title, book_path(f.id) %>
             </td>
             <td><%= f.body %></td>
             <td></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
