<!--エラーメッセージ-->
<div id="error_explanation">
  <% if @book.errors.any? %>
 <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
<% end %>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <!--サイドバー-->
    <%= render 'sidebar', book: @book, user: @user %>
    <!--booksインデックスメインページ-->
    <div class="col-md-8 offset-md-1">
      <h2>books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |f| %>
            <tr>
              <td>
                <%= link_to user_path(f.user_id) do %>
                  <%= attachment_image_tag f.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
                <% end %>
              </td>
              <td><%= link_to f.title, book_path(f.id) %></td>
              <td><%= f.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

