<h2>User info</h2>
<%= attachment_image_tag current_user, :profile_image, format: 'jpeg',fallback: "no_image.jpg", size: "100x100" %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to 'プロフィール編集', edit_user_path(current_user.id) %>

<h2>New book</h2>
<%= form_with model: book,local:true do |f| %>
 <label>Title</label>
 <%= f.text_field :title %>
 <label>Opinion</label>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>