<!--サイドバー-->
<%= render 'sidebar', book: @new %>


<!--新規投稿した後のページ(bookのshowページ)-->
<h2>Book detail</h2>
<table class="table">
  <tbody>
    <tr>
      <td>
        <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %><br>
        <%= @book.user.name %>
      </td>
      <td><%= link_to @book.title, book_path(@book) %></td>
      <td><%= @book.body %></td>
      <td><%= link_to 'edit', edit_book_path(@book) %></td>
      <td><%= link_to 'delete', book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
    </tr>
  </tbody>
</table>