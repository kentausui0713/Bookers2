<!--サイドバー-->
<%= render 'sidebar', book: @book %>


<!--bookのshowページ　(新規投稿した後、タイトルリンク先)-->
<h2>Book detail</h2>
<table class="table">
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book_edit.user_id) do %>
          <%= attachment_image_tag @book_edit.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></br>
          <%= @book_edit.user.name %>
        <% end %>
      </td>
      <td><%= link_to @book_edit.title, book_path(@book_edit) %></td>
      <td><%= @book_edit.body %></td>
      <% if @book_edit.user_id == current_user.id %>
        <td><%= link_to 'edit', edit_book_path(@book_edit) %></td>
        <td><%= link_to 'delete', book_path(@book_edit), method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
      <% end %>
    </tr>
  </tbody>
</table>