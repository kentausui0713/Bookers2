<div class="container px-5 px-sm-0">
  <div class="row">
    <!--サイドバー-->
    <%= render 'sidebar', book: @book %>
    <div class="col-md-8 offset-md-1">
      <!--bookのshowページ　(新規投稿した後、タイトルリンク先)-->
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book_edit.user_id) do %>
                <%= attachment_image_tag @book_edit.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></br>
                <%= @book_edit.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book_edit.title, book_path(@book_edit) %></td>
            <td><%= @book_edit.body %></td>
            <% if @book_edit.user_id == current_user.id %>
              <td><%= link_to 'Edit', edit_book_path(@book_edit), class: "btn btn-success" %></td>
              <td><%= link_to 'Destroy', book_path(@book_edit), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
